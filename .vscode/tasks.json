{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "isBackground": true,
            "runOptions": {
                "reevaluateOnRerun": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "build",
                "--nologo",
                "--no-restore",
                "${workspaceFolder}/Sample/Sample.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}